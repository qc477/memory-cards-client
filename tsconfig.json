{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "ES5",
    "removeComments": true,
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "paths": {
      "@/assets/*": ["src/assets/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/models/*": ["src/models/*"],
      "@/components/*": ["src/components/*"],
      "@/services/*": ["src/services/*"],
      "@/store/*": ["src/store/*"],
      "@/hooks/*": ["src/hooks/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "src/declaration.d.ts"]
}
